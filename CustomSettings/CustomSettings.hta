<html><head><title>Custom Settings</title>
<HTA:APPLICATION
	ID="HTA"
	APPLICATIONNAME="Custom Settings"
	SCROLL="no"
	ICON="explorer.exe"
	MAXIMIZEBUTTON="no"
	VERSION="1.0"
>
</head>

<script language="VBScript">
Dim WSH : Set WSH = CreateObject("WScript.Shell")
Dim WSHNet : Set WshNet = CreateObject("WScript.Network")
Dim FSO : Set FSO = CreateObject("Scripting.FileSystemObject")
CurrentPath = Left(replace(HTA.commandLine,chr(34),""),InStrRev(replace(HTA.commandLine,chr(34),""),"\"))

Sub Window_Onload
	AppName.InnerHTML = HTA.ApplicationName
	AppVer.InnerHTML = HTA.Version
	window.moveto 0,0
	window.resizeto 500,250
	Set Folder = FSO.GetFolder(CurrentPath)
	Set Files = Folder.Files
	For Each File in Files
		If Right(File,3) = "ini" Then
			Set objOption = Document.createElement("OPTION")
			objOption.Text = Left(File.Name,Len(File.Name)-4)
			objOption.Value = File.Path
			OS.Add(objOption)
		End If
	Next
End Sub

Function Run
	CustomSettingsini = DS.Value & "\Control\CustomSettings.ini"
	FSO.CopyFile OS.Value, CustomSettingsini, true
	If Edit.Checked Then WSH.Run "notepad " & CustomSettingsini,1,false
	window.close
End Function
</script>

<style type="text/css">
Body {
	font-family:Tahoma;
	font-weight:Bold;
	font-size:10pt;
	margin-top:0px;
	margin-left:0px;
	margin-right:0px;
	margin-bottom:0px;
	}
TD {
	font-family:Tahoma;
	font-weight:Bold;
	font-size:10pt
	}
</style>


<body>
<center><h2><u><span ID="AppName">&nbsp;</span></u></h2>
Version:&nbsp;<span ID="AppVer">&nbsp;</span><br>
DeploymentShare:<input type="text" size="40" name="DS" Value="\\MDT\DeploymentShare"><br><br>
Select OS:
<Select Name="OS">
</Select><br><br>
Edit File after copy?<input type="checkbox" name="Edit"><br><br>
<input type="button" value="Replace CustomSettings.ini" name="run_button" onClick="Run">
</body></html>